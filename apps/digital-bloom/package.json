{
  "name": "digital-bloom",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "cap:sync": "cap sync",
    "cap:open:ios": "cap open ios",
    "cap:run:ios": "cap run ios",
    "ios:icons": "chmod +x scripts/generate-ios-icons.sh && ./scripts/generate-ios-icons.sh",
    "ios:build": "bun run ios:icons && bun run build && bun run cap:sync ios",
    "ios:open": "open ios/App/App.xcworkspace",
    "ios:test": "bash scripts/ios-integration-test.sh",
    "ios:deploy": "bash scripts/build-and-deploy-ios.sh",
    "ios:deploy:device": "bash scripts/build-and-deploy-ios.sh",
    "ios:logs": "bash scripts/parse-device-logs.sh",
    "ios:simulator:setup": "bash scripts/setup-simulator.sh",
    "ios:simulator:coords": "bash scripts/get-simulator-coords.sh",
    "ios:simulator:test": "bash scripts/ios-simulator-validation-test.sh",
    "watchos:build": "bash scripts/build-watchos.sh",
    "watchos:clean": "cd crates/digital-bloom-ffi && cargo clean && rm -rf build/",
    "watchos:rebuild": "bun run watchos:clean && bun run watchos:build",
    "watchos:deploy": "bash scripts/watchos-simulator-deploy.sh",
    "watchos:deploy:ultra": "bash scripts/watchos-simulator-deploy.sh 'Apple Watch Ultra 2 (49mm)'",
    "watchos:deploy:se": "bash scripts/watchos-simulator-deploy.sh 'Apple Watch SE (44mm) (2nd generation)'",
    "deploy:device": "bash scripts/deploy-to-device.sh",
    "deploy:iphone": "bash scripts/deploy-to-device.sh name=zojak-16m",
    "deploy:watch": "bash scripts/deploy-to-device.sh '' name=baw_9"
  },
  "devDependencies": {
    "@capacitor/cli": "^7.4.3",
    "@capacitor/core": "^7.4.3",
    "@capacitor/ios": "^7.4.3",
    "@vitest/ui": "^2.1.8",
    "autoprefixer": "^10.4.21",
    "happy-dom": "^15.11.7",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.9.2",
    "vite": "^4.0.0",
    "vite-plugin-wasm-pack": "^0.1.12",
    "vitest": "^2.1.8"
  },
  "dependencies": {
    "@jofr/capacitor-media-session": "^4.0.0",
    "tone": "^15.1.22"
  }
}
