{
  "name": "bodal.dev",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "bun run build:digital-bloom && next build",
    "build:digital-bloom": "cd apps/digital-bloom && bun install && bun run build && cd ../.. && bun run deploy:digital-bloom",
    "deploy:digital-bloom": "rm -rf public/digital-bloom && cp -r apps/digital-bloom/dist public/digital-bloom",
    "start": "bunx serve@latest out",
    "lint": "next lint",
    "export": "next build",
    "typecheck": "tsc --noEmit",
    "digital-bloom:dev": "cd apps/digital-bloom && bun run dev",
    "digital-bloom:ios:build": "cd apps/digital-bloom && bun run ios:build",
    "digital-bloom:ios:open": "cd apps/digital-bloom && bun run ios:open",
    "digital-bloom:ios:test": "cd apps/digital-bloom && bash scripts/ios-integration-test.sh",
    "digital-bloom:ios:run": "cd apps/digital-bloom && bun run cap:run:ios",
    "digital-bloom:docker:test": "cd apps/digital-bloom && bash scripts/test-docker-build.sh"
  },
  "dependencies": {
    "@mdx-js/loader": "^3.1.0",
    "@mdx-js/react": "^3.1.0",
    "@next/mdx": "^15.4.5",
    "@tailwindcss/typography": "^0.5.16",
    "gray-matter": "^4.0.3",
    "next": "15.5.4",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "tailwindcss": "^3.4.17",
    "tone": "^15.1.22",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.13",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "typescript": "^5"
  }
}
